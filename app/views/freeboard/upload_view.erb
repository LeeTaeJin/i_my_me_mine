    <div class="container">
    <div class="row">
                    <br><br><br><br>
                                
                    제목
                    <div style="padding-top:1px; padding-bottom:1px; background:rgba(80,80,80,0.5); align:center">
                        <center><h3><%= @one_fb.fb_title %></h3></center>
                    </div><br><br> 
                        
                    내용
                    <div style="padding-top:1px; padding-bottom:1px; background:rgba(80,80,80,0.5); align:center;"><br>
                    <center><p class="lead"><%= @one_fb.fb_content %></p></center><br><br>
                    </div><br>
                                              
                            <% @one_fb.replies.each do |r| %>
                             
                                <div class="<%= r.id %>">  
                                
                                    <h6><%= r.rp_name %> : <%= r.rp_content %></h6>
                                    
                                </div>
                                <!--<div class="<%= r.id %>" style="display :none">                               -->
                                <!--        <textarea name="rp_content"></textarea>-->
                                <!--        <input type="submit" value='확인'></button>-->
                                <!--        <input type="hidden" name="rp_id" value="<%= r.id %>">                                       -->
                                <!--</div>-->
                                
                                <form  action="/freeboard/reply_delete" method="GET">
                                    <input type="hidden" name="rp_id" value="<%= r.id %>">
                                    <input type="submit" value="삭제">                                
                                </form>
                            
                            <% end %> 
                          <br><br>
                            <%= form_tag("/freeboard/reply_write", method: "post") do %>
                                <% if user_signed_in? %>
                                    작성자 : <%= current_user.student_name %> 
                                <% end %><br>
                                
                                <textarea type="text" name="rp_content"  placeholder="리플을 달아주세요" rows="4" cols="59"></textarea><br>
                                <input type="hidden" name="freeboard_id" value="<%= @one_fb.id %>">
                                <input type="hidden" name="rp_name" value="<%= current_user.student_name %>">
                                <input type="hidden" name="rp_hakbun" value="<%= current_user.student_number %>">
                                <input type="submit" value="댓글달기">
                                <a href="/freeboard/delete?id=<%= @one_fb.id %>">삭제하기</a>
                                <a href="/freeboard/modify?id=<%= @one_fb.id %>">수정하기</a><br><br><br><br><br><br>
                            <% end %>
        </div>
    </div>


