<div class="well">
  <center>쪽지 쓰는 페이지입니당</center>
</div>


<div class="col-md-4"></div>
<div class="col-md-4">
  <form class="form-horizontal" action="/message/write_process" method="POST">
    <fieldset>
       <div class="form-group">
        <label for="inputprofessor" class="col-lg-2 control-label">보내는 사람</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" name="sender" value="<%=current_user.email%>" disabled>
        </div>
      </div>
    
      <div class="form-group">
        <label for="select" class="col-lg-2 control-label">받는사람</label>
        <div class="col-lg-10">
          <select class="form-control" id="select" name="receiver" required>
              <% User.all.each do |u| %>
                <option><%=u.email%></option>
              <%end%>
          </select>
          <br>
        </div>
      </div>
      
      <div class="form-group">
        <label for="inputpurpose" class="col-lg-2 control-label">내용</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="3" name="content" required></textarea>
        </div>
      </div>
     
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <button type="reset" class="btn btn-default">Cancel</button>
          <button type="submit" class="btn btn-primary">쪽지보내기</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>
<div class="col-md-4"></div>
