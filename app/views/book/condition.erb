           @state_change.state="승인완료"
           @state_change.save %> //db에 저장
           
           view_state.innerHTML="<%=c.state%>"; //상태표시를 바꿔줌
           button.innerHTML="승인취소"; //버튼의값을 일시적으로 바꿔줌
           
      <% else %>//승인취소시
        <% @state_change=Reservation.find(c.id)
           @state_change.state="승인대기"
           @state_change.save %> //db에 저장
           
           view_state.innerHTML="<%=c.state%>"; //상태표시를 바꿔줌
