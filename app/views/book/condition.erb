    var button = document.getElementById("button<%=c.id%>");
    alert("view_state<%=c.id%>  ;  button<%=c.id%>"  );
      <% if c.state == "승인대기" %> 
      // 승인대기상태라면 버튼눌렀을때 승인완료로 바뀜
