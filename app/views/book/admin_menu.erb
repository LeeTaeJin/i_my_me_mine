<div class="well">
  <center id = "menu_font" style="font-size: 20px">
    관리자 관리 페이지 입니다. 
  </center>
</div>
<br><br>
<div class="containter"> 
  <div class="row">
  
    <div class="col-md-7 col-md-offset-3">
      <table class="table table-striped table-hover">
        <thead>
          <tr class="info">
            
            <th id = "menu_font_t">사용자 이름</th>
            <th id = "menu_font_t">사용날짜</th>
            <th id = "menu_font_t">사용시간</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <center><p id = "menu_font" style = "font-size:20px;"><span class="glyphicon glyphicon-time" aria-hidden="true"></span>&nbsp;시간별 예약 리스트 </p>
          <% Reservation.all.each do |c| %>
              <tr>
               
                <td id = "menu_font_t"><%=User.find(c.user).email %></td>
                <td id = "menu_font_t"><%=c.date%></td>
                <td id = "menu_font_t"><%=c.start_time.to_s(:db)%> ~ <%=c.finish_time.to_s(:db)%></td>
                
                <td>
                  <% if current_user %> <!--로그인 된 상태.-->
                          
                    <%  if current_user.email == "admin@ptu.ac.kr" %> <!--관리자일때 승인하기-->
                      <span id = "menu_font_t" class="label label-info" id="view_state<%c.id%>"><%=c.state%></span>
                      
                      <% if c.state=="승인대기" %>
                        <button type="button" class="btn btn-primary btn-sm" id="button<%=c.id%>" onclick="change()" >승인하기</button>
                      <% else %>
                        <button type="button" class="btn btn-primary btn-sm" id="button<%=c.id%>" onclick="change()">승인취소</button>
                      <%end%>
                                    
                    <% else %> <!--관리자가 아닐때 승인대기-->
                      <span id = "menu_font_t" class="label label-info"><%=c.state%></span><!--관리자가 아닐땐 상태만 보여준다-->
                      <input class="btn btn-primary btn-sm" value="승인대기" id="<=c.id%>"></input>
                                
                    <% end %>
                                     
                  <% end %> <!-- if current_user end -->
                        
    
                </td>
                   
                <td><button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#show<%=c.id%>">상세보기</button></td>
                
               
              </tr>
    
          <% end %>
        </tbody>
      </table> 
      
      
