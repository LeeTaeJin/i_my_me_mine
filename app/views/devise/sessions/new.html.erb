<center>
<h2 id = "menu_font"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> &nbsp;로그인</h2>
<br><br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" id = "menu_font" style = "font-size:20px;">
    <%= f.label :email,"이메일" %><br />
    
  </div>
  
  <div class="field">
    <%= f.email_field :email, autofocus: true %>
  </div>
<br>
  <div class="field" id = "menu_font" style = "font-size:20px;">
    <%= f.label :password, "비밀번호" %><br />
  </div>
  
  <div class="field">
     <%= f.password_field :password, autocomplete: "off" %>
  </div>
<br>
  <% if devise_mapping.rememberable? -%>
   <div class="field" id = "menu_font">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
<br>
  <div class="actions" id = "menu_font" >
   <%= f.submit "로그인" %> 
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>

</center>
<br><br><br><br><br>
